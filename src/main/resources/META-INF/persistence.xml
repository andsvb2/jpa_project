<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="jpa">

        <class>entities.Atendimento</class>
        <class>entities.Cliente</class>
        <class>entities.EnderecoCliente</class>
        <class>entities.ClienteTelefone</class>
        <class>entities.Compra</class>
        <class>entities.CompraDetalhamento</class>
        <class>entities.Funcionario</class>
        <class>entities.EnderecoFuncionario</class>
        <class>entities.FuncionarioTelefone</class>
        <class>entities.Produto</class>
        <class>entities.Endereco</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/dac"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value="dac"/>
            <property name="hibernate.connection.password" value="dac"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
        </properties>
    </persistence-unit>
</persistence>
