<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="jpa">

        <class>entities.AtendimentoEntity</class>
        <class>entities.ClienteEntity</class>
        <class>entities.ClienteEnderecoEntity</class>
        <class>entities.ClienteTelefoneEntity</class>
        <class>entities.CompraEntity</class>
        <class>entities.CompraDetalhamentoEntity</class>
        <class>entities.FuncionarioEntity</class>
        <class>entities.FuncionarioEnderecoEntity</class>
        <class>entities.FuncionarioTelefoneEntity</class>
        <class>entities.ProdutoEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/dac"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value="dac"/>
            <property name="hibernate.connection.password" value="dac"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
        </properties>
    </persistence-unit>
</persistence>
